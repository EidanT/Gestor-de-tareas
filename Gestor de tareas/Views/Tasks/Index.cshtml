@model IEnumerable<Gestor_de_tareas.Models.TaskManager>


@{
    ViewData["Title"] = "Task Manager";
}

<h2>Task Manager</h2>
<a class="btn btn-primary" asp-action="Create">New Task</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@(task.Completed ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
